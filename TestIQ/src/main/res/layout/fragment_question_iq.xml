<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:paddingTop="@dimen/_16sdp"
        android:paddingBottom="@dimen/_16sdp"
        android:tint="#22313F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_iq"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="22:00"
        android:textColor="#22313F"
        android:textSize="@dimen/_16ssp"
        app:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:gravity="center"
        android:text="Submit"
        android:textColor="#21C3FF"
        android:textSize="@dimen/_16ssp"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_7sdp"
        android:background="#33EDE8E8"
        app:layout_constraintTop_toBottomOf="@id/iv_back" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:padding="@dimen/_4sdp"
        tools:text="1/40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/pb_money"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:max="5"
        android:progressDrawable="@drawable/customer_progressbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result"
        tools:progress="1" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/page_question"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/line2"
        app:layout_constraintTop_toBottomOf="@id/pb_money"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-48dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/iv_up"
        app:layout_constraintTop_toBottomOf="@+id/pb_money">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/question_name"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_11ssp"
                tools:text="Câu 1. Trong bài test của bạn có một số câu hỏi. Bạn đã trả lời sai 10 câu hỏi. Kết quả thang điểm của bạn chỉ đạt 60%. Vậy bài test của bạn có tất cả bao nhiêu câu hỏi?"
                android:textColor="#22313F"
                android:textSize="@dimen/_14ssp"
                app:fontFamily="@font/roboto_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_question"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_margin="@dimen/_11ssp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible"
                tools:src="@drawable/image_quetstion"
                app:layout_constraintTop_toBottomOf="@+id/question_name" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcl_options_answer"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_question"
                tools:listitem="@layout/item_answer_image" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_6sdp"
        android:background="#F2F2F3"
        app:layout_constraintBottom_toTopOf="@id/iv_previous" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp"
        android:src="@drawable/ic_back_iq"
        android:tint="#22313F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0sp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="Previous"
        android:textColor="#22313F"
        android:textSize="@dimen/_16ssp"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="@id/iv_previous"
        app:layout_constraintEnd_toStartOf="@id/iv_up"
        app:layout_constraintStart_toEndOf="@id/iv_previous"
        app:layout_constraintTop_toTopOf="@id/iv_previous" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_3sdp"
        android:src="@drawable/ic_frame_39744"
        app:layout_constraintBottom_toBottomOf="@id/iv_previous"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_previous" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_next"
        android:layout_width="0sp"
        android:layout_height="0dp"
        android:gravity="center_vertical|end"
        android:text="Next"
        android:textColor="#22313F"
        android:textSize="@dimen/_16ssp"
        app:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="@id/iv_next"
        app:layout_constraintEnd_toStartOf="@id/iv_next"
        app:layout_constraintStart_toEndOf="@id/iv_up"
        app:layout_constraintTop_toTopOf="@id/iv_next" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp"
        android:src="@drawable/ic_next"
        android:tint="#22313F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view_next"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_up"
        app:layout_constraintTop_toTopOf="@id/iv_up" />

    <View
        android:id="@+id/view_previous"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_up"
        app:layout_constraintEnd_toStartOf="@+id/iv_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_up" />

</androidx.constraintlayout.widget.ConstraintLayout>