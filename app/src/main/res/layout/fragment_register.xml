<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragment.register.RegisterFragment">

        <ImageView
            android:id="@+id/imv_thum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_content"
            android:background="@drawable/login_background"
            android:paddingBottom="@dimen/_122sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imv_thum">

            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/txt_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="@string/register"
                android:textColor="@color/color_22313F"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <com.quiztest.quiztest.custom.ExtEditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/boarder"
                android:ellipsize="end"
                android:inputType="text"
                android:maxLines="1"
                android:paddingVertical="@dimen/_11sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_60sdp"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_register" />
            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/txt_error_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:textColor="@color/color_DC2323"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_name"
                android:visibility="gone"/>

            <com.quiztest.quiztest.custom.ExtTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/margin_top_content"
                android:background="@color/white"
                android:text="@string/name"
                android:textColor="@color/color_8D959D"
                app:layout_constraintLeft_toLeftOf="@id/edt_pass"
                app:layout_constraintTop_toTopOf="@id/edt_name" />

            <com.quiztest.quiztest.custom.ExtEditText
                android:id="@+id/edt_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/boarder"
                android:ellipsize="end"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingVertical="@dimen/_11sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_60sdp"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_error_name" />

            <com.quiztest.quiztest.custom.ExtTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/margin_top_content"
                android:background="@color/white"
                android:text="@string/email"
                android:textColor="@color/color_8D959D"
                app:layout_constraintLeft_toLeftOf="@id/edt_pass"
                app:layout_constraintTop_toTopOf="@id/edt_mail" />
            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/txt_error_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:textColor="@color/color_DC2323"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_mail"
                android:visibility="gone"/>


            <com.quiztest.quiztest.custom.ExtEditText
                android:id="@+id/edt_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/boarder"
                android:ellipsize="end"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingVertical="@dimen/_11sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_60sdp"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_error_email" />

            <com.quiztest.quiztest.custom.ExtTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/margin_top_content"
                android:background="@color/white"
                android:text="@string/password"
                android:textColor="@color/color_8D959D"
                app:layout_constraintLeft_toLeftOf="@id/edt_pass"
                app:layout_constraintTop_toTopOf="@id/edt_pass" />
            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/txt_error_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:textColor="@color/color_DC2323"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_pass"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imv_eye_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/ic_close_eye"
                app:layout_constraintBottom_toBottomOf="@id/edt_pass"
                app:layout_constraintRight_toRightOf="@id/edt_pass"
                app:layout_constraintTop_toTopOf="@id/edt_pass" />

            <com.quiztest.quiztest.custom.ExtEditText
                android:id="@+id/edt_confirm_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/boarder"
                android:ellipsize="end"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingVertical="@dimen/_11sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_60sdp"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_error_pass" />

            <com.quiztest.quiztest.custom.ExtTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/margin_top_content"
                android:background="@color/white"
                android:text="@string/re_password"
                android:textColor="@color/color_8D959D"
                app:layout_constraintLeft_toLeftOf="@id/edt_pass"
                app:layout_constraintTop_toTopOf="@id/edt_confirm_pass" />
            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/txt_error_confirmpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:textColor="@color/color_DC2323"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_confirm_pass"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imv_eye_repass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/ic_close_eye"
                app:layout_constraintBottom_toBottomOf="@id/edt_confirm_pass"
                app:layout_constraintRight_toRightOf="@id/edt_confirm_pass"
                app:layout_constraintTop_toTopOf="@id/edt_confirm_pass" />

            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/txt_our_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/color_22313F"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@+id/txt_error_confirmpass"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center"
                tools:text="When you click register, you agree to Our Terms and Conditions of Use" />

            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/bg_button_enable"
                android:gravity="center"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_our_term"
                android:enabled="false"/>

            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/txt_do_you_already"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/do_you_already_have_an_account"
                android:textColor="@color/color_8D959D"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toStartOf="@id/txt_send_again"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_register" />

            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/txt_send_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/login"
                android:textColor="@color/color_22313F"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@id/txt_do_you_already"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_do_you_already"
                app:layout_constraintTop_toTopOf="@id/txt_do_you_already" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@color/color_E3E5E7"
                app:layout_constraintBottom_toBottomOf="@id/txt_center"
                app:layout_constraintEnd_toStartOf="@id/txt_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_center" />

            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/txt_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/or"
                android:textColor="@color/color_8D959D"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_do_you_already" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:background="@color/color_E3E5E7"
                app:layout_constraintBottom_toBottomOf="@id/txt_center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_center"
                app:layout_constraintTop_toTopOf="@id/txt_center" />


            <ImageView
                android:id="@+id/imv_logo_google"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:src="@drawable/ic_google"
                app:layout_constraintEnd_toStartOf="@+id/imv_logo_facebook"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_center" />

            <ImageView
                android:id="@+id/imv_logo_facebook"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/ic_facebook"
                app:layout_constraintBottom_toBottomOf="@id/imv_logo_google"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imv_logo_google"
                app:layout_constraintTop_toTopOf="@id/imv_logo_google" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
