<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/_16sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingEnd="@dimen/_18sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:src="@drawable/ic_arrrow_left" />

        <SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/bg_search_corner_8"
            android:iconifiedByDefault="false"
            android:queryBackground="@null"
            android:queryHint="@string/search_quiz"
            android:theme="@style/AppSearchView" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:visibility="gone">

        <com.quiztest.quiztest.custom.ExtTextView
            android:id="@+id/tv_recommend_for_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recommend_for_you"
            android:textColor="@color/color_22313F"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_recommend_for_you"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="-6dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"
            tools:itemCount="6"
            tools:listitem="@layout/item_recommend_for_you_searc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_search_recent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:visibility="gone">

        <com.quiztest.quiztest.custom.ExtTextView
            android:id="@+id/tv_search_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_recent"
            android:textColor="@color/color_22313F"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_search_recent"
            android:layout_centerHorizontal="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:spanCount="4"
            tools:itemCount="5"
            tools:listitem="@layout/item_search_recent" />
    </RelativeLayout>

    <com.quiztest.quiztest.custom.ExtTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/bg_search_corner_8"
        android:backgroundTint="@color/color_EDF6FA"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:text="@string/show_all_history"
        android:textAlignment="center"
        android:textColor="@color/color_21C3FF"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_80sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bg_empty_view" />

        <com.quiztest.quiztest.custom.ExtTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_26sdp"
            android:text="@string/no_search_results_found"
            android:textColor="@color/color_8D959D"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>
</LinearLayout>