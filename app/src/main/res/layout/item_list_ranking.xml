<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        app:cardCornerRadius="@dimen/_8sdp">

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_E3F4FB">

            <ImageView
                android:id="@+id/ic_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/ic_rank_gold" />

            <com.quiztest.quiztest.custom.ExtTextView
                android:visibility="gone"
                android:id="@+id/tv_stt"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/color_21C3FF"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_toEndOf="@id/ic_rank"
                app:cardCornerRadius="@dimen/_200sdp">

                <ImageView
                    android:id="@+id/imv_avatar"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/ic_create_account_profile" />
            </androidx.cardview.widget.CardView>

            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/ext_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/cv_avatar"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_toEndOf="@id/cv_avatar"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color_22313F"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/ext_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/cv_avatar"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toEndOf="@id/cv_avatar"
                android:textColor="@color/color_22313F"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_12sdp"
                android:src="@drawable/ic_goto_item_rank" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>