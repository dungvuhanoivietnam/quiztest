<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_24sdp"
            android:src="@drawable/ic_arrrow_left" />

        <com.quiztest.quiztest.custom.ExtTextView
            android:id="@+id/ext_title_action_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:gravity="center_horizontal"
            android:text="@string/get_more_star_chances"
            android:textColor="@color/color_22313F"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_withdraw_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rl_your_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_money_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_money_home" />

                <LinearLayout
                    android:id="@+id/ll_your_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_toEndOf="@id/iv_money_home"
                    android:orientation="vertical">

                    <com.quiztest.quiztest.custom.ExtTextView
                        android:id="@+id/ext_label_your_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_money"
                        android:textColor="@color/color_8D959D"
                        android:textSize="@dimen/_11sdp" />

                    <LinearLayout
                        android:id="@+id/ll_money_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <com.quiztest.quiztest.custom.ExtTextView
                            android:id="@+id/ext_money_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/value_"
                            android:textColor="@color/color_22313F"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold" />

                        <com.quiztest.quiztest.custom.ExtTextView
                            android:id="@+id/ext_money_count_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="@string/money"
                            android:textColor="@color/color_22313F"
                            android:textSize="@dimen/_8ssp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_hide_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_toEndOf="@id/ll_your_money"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_hide_show" />
            </RelativeLayout>

            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/ext_withdraw_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="@drawable/bg_search_corner_8"
                android:backgroundTint="@color/color_21C3FF"
                android:paddingStart="@dimen/_18sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/_18sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="@string/withdraw_money"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_AdMod_Native"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/bg_search_corner_8"
            android:backgroundTint="@color/color_EDEFF1"
            android:orientation="horizontal"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_64sdp"
                android:layout_height="@dimen/_64sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_8sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="vertical">

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/ext_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="Headline"
                    android:textColor="@color/color_22313F"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/ext_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Description content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/ext_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:background="@drawable/bg_search_corner_8"
                android:backgroundTint="@color/color_21C3FF"
                android:paddingStart="@dimen/_18sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingEnd="@dimen/_18sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="@string/open"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <com.quiztest.quiztest.custom.ExtTextView
            android:id="@+id/tvNoData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="@string/empty_data"
            android:textColor="@color/color_22313F"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:visibility="gone" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_get_more_chance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_all_quiz_new" />
    </LinearLayout>


</LinearLayout>