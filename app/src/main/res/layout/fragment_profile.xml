<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/ll_top"
        layout="@layout/item_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/ll_top">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_create_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    card_view:cardCornerRadius="15dp"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:id="@+id/llActiveUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/llInfoUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.quiztest.quiztest.custom.ExtTextView
                                        android:id="@+id/txt_title_create_acount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="@string/create_account"
                                        android:textColor="@color/color_22313F"
                                        android:textSize="@dimen/_14sdp" />

                                    <ImageView
                                        android:id="@+id/iv_create_account"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:src="@drawable/ic_arrow_right"
                                        app:layout_constraintLeft_toRightOf="@+id/txt_title_create_acount"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </LinearLayout>

                                <com.quiztest.quiztest.custom.ExtTextView
                                    android:id="@+id/txt_content_create_account"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:text="@string/create_an_account_and_take_the_quiz"
                                    android:textColor="@color/color_8D959D"
                                    android:textSize="@dimen/_11sdp"
                                    app:layout_constraintLeft_toLeftOf="parent" />
                            </LinearLayout>

                            <com.quiztest.quiztest.custom.ExtTextView
                                android:id="@+id/tvProfile"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:background="@drawable/custom_circle_view"
                                android:gravity="center"
                                android:text="H"
                                android:textColor="@android:color/white"
                                android:textSize="30sp"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:background="@drawable/bg_button_blue_21"
                            android:gravity="center"
                            android:paddingVertical="@dimen/_8sdp"
                            app:layout_constraintTop_toBottomOf="@+id/iv_profile">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_crown" />

                            <com.quiztest.quiztest.custom.ExtTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="@string/upgrade_to_the_pro_version"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13sdp" />

                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/llInActiveUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <FrameLayout
                        android:id="@+id/frAvartar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/llTop">

                        <ImageView
                            android:id="@+id/ivAvatar"
                            android:layout_width="@dimen/_72sdp"
                            android:layout_height="88dp"
                            android:src="@drawable/ic_create_account_profile" />

                        <ImageView
                            android:id="@+id/ivUpload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/ic_upload"
                            android:visibility="gone" />
                    </FrameLayout>

                    <com.quiztest.quiztest.custom.ExtTextView
                        android:id="@+id/tvGuest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="@string/you_are_using_guest_mode"
                        android:textColor="@color/color_8D959D"
                        android:textSize="@dimen/_11sdp" />

                    <LinearLayout
                        android:id="@+id/ll_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:background="@drawable/bg_button_blue_21"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_40sdp"
                        android:paddingVertical="@dimen/_8sdp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cv_history_result">

                        <com.quiztest.quiztest.custom.ExtTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/log_in"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13sdp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/csMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:background="@drawable/bg_search_corner_8"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_4sdp"
                app:layout_constraintTop_toBottomOf="@id/llUser">

                <RelativeLayout
                    android:id="@+id/rl_your_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_star_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_home" />

                    <LinearLayout
                        android:id="@+id/ll_your_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_toEndOf="@id/iv_star_home"
                        android:orientation="vertical">

                        <com.quiztest.quiztest.custom.ExtTextView
                            android:id="@+id/ext_label_your_star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/your_star"
                            android:textColor="@color/color_8D959D"
                            android:textSize="@dimen/_11sdp" />

                        <LinearLayout
                            android:id="@+id/ll_star_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="horizontal">

                            <com.quiztest.quiztest.custom.ExtTextView
                                android:id="@+id/ext_star_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/value_"
                                android:textColor="@color/color_22313F"
                                android:textSize="@dimen/_20ssp"
                                android:textStyle="bold" />

                            <com.quiztest.quiztest.custom.ExtTextView
                                android:id="@+id/ext_star_count_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:text="@string/star"
                                android:textColor="@color/color_22313F"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/divider_header"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/color_E3F4FB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/rl_your_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:layout_constraintStart_toEndOf="@id/divider_header"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_money_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_money_home" />

                    <LinearLayout
                        android:id="@+id/ll_your_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_toEndOf="@id/iv_money_home"
                        android:orientation="vertical">

                        <com.quiztest.quiztest.custom.ExtTextView
                            android:id="@+id/ext_label_your_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/your_money"
                            android:textColor="@color/color_8D959D"
                            android:textSize="@dimen/_11sdp" />

                        <LinearLayout
                            android:id="@+id/ll_money_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="horizontal">

                            <com.quiztest.quiztest.custom.ExtTextView
                                android:id="@+id/ext_money_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/value_"
                                android:textColor="@color/color_22313F"
                                android:textSize="@dimen/_20ssp"
                                android:textStyle="bold" />

                            <com.quiztest.quiztest.custom.ExtTextView
                                android:id="@+id/ext_money_count_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:text="@string/money"
                                android:textColor="@color/color_22313F"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/btnWithDrawMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:background="@drawable/bg_corner_50"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawablePadding="@dimen/_8sdp"
                    android:drawableTint="@color/white"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="@string/withdraw_money"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_your_star" />

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/tvWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="Warning: Please sign in to save money"
                    android:textColor="@color/color_DC2323"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/rl_your_star"
                    app:layout_constraintTop_toBottomOf="@id/rl_your_star" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/csMoney"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_4sdp"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_10sdp">

                    <com.quiztest.quiztest.custom.ExtTextView
                        android:id="@+id/txt_title_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language"
                        android:textColor="@color/color_22313F"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/txt_title_language">

                        <com.quiztest.quiztest.custom.ExtTextView
                            android:id="@+id/tvSpockenLanguage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:text="@string/spoken_language"
                            android:textColor="@color/color_22313F"
                            android:textSize="@dimen/_14sdp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/sp_language"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_arrow_bottom" />

                        </LinearLayout>


                    </RelativeLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <include
                android:id="@+id/cv_infomation"
                layout="@layout/item_profile_infomation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/cvLanguage" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>