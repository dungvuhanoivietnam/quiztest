<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@drawable/bg_search_corner_8"
                android:iconifiedByDefault="false"
                android:queryBackground="@null"
                android:queryHint="Search" />

            <LinearLayout
                android:id="@+id/ll_guest_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/bg_search_corner_8"
                android:backgroundTint="@color/color_EDF6FA"
                android:orientation="vertical"
                android:visibility="visible">

                <com.quiztest.quiztest.custom.ExtTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:text="@string/text_guest_mode"
                    android:textAlignment="center"
                    android:textColor="@color/color_8D959D"
                    android:textStyle="bold" />

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/ext_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:background="@drawable/bg_search_corner_8"
                    android:backgroundTint="@color/color_21C3FF"
                    android:paddingStart="@dimen/_48sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_48sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:text="@string/log_in"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cst_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/bg_search_corner_8"
                android:backgroundTint="@color/color_EDF6FA"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_16sdp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_your_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@id/ll_your_money"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.quiztest.quiztest.custom.ExtTextView
                        android:id="@+id/ext_label_your_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_star"
                        android:textColor="@color/color_8D959D"
                        android:textSize="@dimen/_11sdp" />

                    <LinearLayout
                        android:id="@+id/ll_star_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <com.quiztest.quiztest.custom.ExtTextView
                            android:id="@+id/ext_star_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16"
                            android:textColor="@color/color_22313F"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold" />

                        <com.quiztest.quiztest.custom.ExtTextView
                            android:id="@+id/ext_star_count_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="@string/star"
                            android:textColor="@color/color_22313F"
                            android:textSize="@dimen/_8ssp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_your_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ll_your_star"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.quiztest.quiztest.custom.ExtTextView
                        android:id="@+id/ext_label_your_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_hide_show"
                        android:text="@string/your_money"
                        android:textColor="@color/color_8D959D"
                        android:textSize="@dimen/_11sdp" />

                    <LinearLayout
                        android:id="@+id/ll_money_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <com.quiztest.quiztest.custom.ExtTextView
                            android:id="@+id/ext_money_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="56"
                            android:textColor="@color/color_22313F"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold" />

                        <com.quiztest.quiztest.custom.ExtTextView
                            android:id="@+id/ext_money_count_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="@string/money"
                            android:textColor="@color/color_22313F"
                            android:textSize="@dimen/_8ssp" />
                    </LinearLayout>
                </LinearLayout>

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/ext_history_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:drawableTop="@drawable/ic_history_star"
                    android:drawablePadding="@dimen/_2sdp"
                    android:text="@string/history_star"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintEnd_toStartOf="@id/ext_payment_history"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_your_star" />

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/ext_payment_history"
                    android:textSize="@dimen/_11sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:drawableTop="@drawable/ic_payment_history"
                    android:drawablePadding="@dimen/_2sdp"
                    android:text="@string/payment_history"
                    app:layout_constraintEnd_toStartOf="@id/ext_get_money"
                    app:layout_constraintStart_toEndOf="@id/ext_history_star"
                    app:layout_constraintTop_toBottomOf="@id/ll_your_star" />

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/ext_get_money"
                    android:textSize="@dimen/_11sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:drawableTop="@drawable/ic_get_money"
                    android:drawablePadding="@dimen/_2sdp"
                    android:text="@string/get_money"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ext_payment_history"
                    app:layout_constraintTop_toBottomOf="@id/ll_your_star" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/rl_all_quiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp">

                <com.quiztest.quiztest.custom.ExtTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_quiz"
                    android:textColor="@color/color_22313F"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/tv_view_all_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/View_all"
                    android:textColor="@color/color_21C3FF"
                    android:textSize="@dimen/_12ssp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_view_all_quiz"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="-6dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:spanCount="2"
                    tools:itemCount="4"
                    tools:listitem="@layout/item_all_quiz_new" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_80sdp">

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/label_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:text="@string/recommend_for_you"
                    android:textColor="@color/color_22313F"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/tv_view_all_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/View_all"
                    android:textColor="@color/color_21C3FF"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="gone" />

                <!--                <androidx.recyclerview.widget.RecyclerView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_below="@id/tv_view_all_recommend"-->
                <!--                    android:layout_centerHorizontal="true"-->
                <!--                    android:layout_marginStart="-6dp"-->
                <!--                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->
                <!--                    tools:itemCount="5"-->
                <!--                    tools:listitem="@layout/item_recommend_for_you" />-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_recommend">

                    <com.quiztest.quiztest.custom.ItemViewRecommend
                        android:id="@+id/item_test_iq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.quiztest.quiztest.custom.ItemViewRecommend
                        android:id="@+id/item_test_eq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.quiztest.quiztest.custom.ItemViewRecommend
                        android:id="@+id/item_test_mbi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_test_eq" />

                    <com.quiztest.quiztest.custom.ItemViewRecommend
                        android:id="@+id/item_test_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_test_eq" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>