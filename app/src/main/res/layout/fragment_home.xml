<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:background="@drawable/bg_header_home"
        android:elevation="@dimen/_2sdp">

        <RelativeLayout
            android:id="@+id/ll_header_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_create_account_profile" />

            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/ext_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toEndOf="@+id/iv_avatar"
                android:gravity="center_vertical"
                android:text="@string/hello_my_friend"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_toStartOf="@id/iv_search"
                android:src="@drawable/ic_noti_home" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:src="@drawable/ic_search_home" />
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/bg_search_corner_8"
            android:backgroundTint="@color/white"
            android:elevation="@dimen/_4sdp">

            <RelativeLayout
                android:id="@+id/rl_your_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_star_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_home" />

                <LinearLayout
                    android:id="@+id/ll_your_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_toEndOf="@id/iv_star_home"
                    android:orientation="vertical">

                    <com.quiztest.quiztest.custom.ExtTextView
                        android:id="@+id/ext_label_your_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_star"
                        android:textColor="@color/color_8D959D"
                        android:textSize="@dimen/_11sdp" />

                    <LinearLayout
                        android:id="@+id/ll_star_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <com.quiztest.quiztest.custom.ExtTextView
                            android:id="@+id/ext_star_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16"
                            android:textColor="@color/color_22313F"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold" />

                        <com.quiztest.quiztest.custom.ExtTextView
                            android:id="@+id/ext_star_count_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="@string/star"
                            android:textColor="@color/color_22313F"
                            android:textSize="@dimen/_8ssp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/divider_header"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/color_E3F4FB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/rl_your_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintStart_toEndOf="@id/divider_header"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_money_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_money_home" />

                <LinearLayout
                    android:id="@+id/ll_your_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_toEndOf="@id/iv_money_home"
                    android:orientation="vertical">

                    <com.quiztest.quiztest.custom.ExtTextView
                        android:id="@+id/ext_label_your_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_money"
                        android:textColor="@color/color_8D959D"
                        android:textSize="@dimen/_11sdp" />

                    <LinearLayout
                        android:id="@+id/ll_money_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <com.quiztest.quiztest.custom.ExtTextView
                            android:id="@+id/ext_money_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="56"
                            android:textColor="@color/color_22313F"
                            android:textSize="@dimen/_11ssp"
                            android:textStyle="bold" />

                        <com.quiztest.quiztest.custom.ExtTextView
                            android:id="@+id/ext_money_count_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="@string/money"
                            android:textColor="@color/color_22313F"
                            android:textSize="@dimen/_8ssp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/iv_get_more_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@drawable/bg_corner_50"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableTint="@color/white"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="@string/get_more"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/rl_your_star"
                app:layout_constraintTop_toBottomOf="@id/rl_your_star" />

            <com.quiztest.quiztest.custom.ExtTextView
                android:id="@+id/iv_get_more_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@drawable/bg_corner_50"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableTint="@color/white"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="@string/get_more"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/rl_your_money"
                app:layout_constraintTop_toBottomOf="@id/rl_your_star" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-40dp"
        android:clipToPadding="false"
        android:paddingTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_AdMod_Native"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/bg_search_corner_8"
                android:backgroundTint="@color/color_EDEFF1"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="@dimen/_16sdp"
                    app:cardCornerRadius="@dimen/_8sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/ext_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:text="AdMod Native Advanced"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/ext_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:autoLink="all"
                    android:text="Figma.com"
                    android:textColor="@color/black"
                    android:textColorLink="@color/color_2F6BFF"
                    android:textSize="@dimen/_12sdp" />

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/ext_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Description content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/ext_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:background="@drawable/bg_search_corner_8"
                    android:backgroundTint="@color/color_21C3FF"
                    android:paddingStart="@dimen/_48sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_48sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:text="@string/open"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_earning_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_10sdp">

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/label_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:text="@string/earning_tasks"
                    android:textColor="@color/color_22313F"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/tv_view_all_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/View_all"
                    android:textColor="@color/color_21C3FF"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="gone" />

                <!--                <androidx.recyclerview.widget.RecyclerView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_below="@id/tv_view_all_recommend"-->
                <!--                    android:layout_centerHorizontal="true"-->
                <!--                    android:layout_marginStart="-6dp"-->
                <!--                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->
                <!--                    tools:itemCount="5"-->
                <!--                    tools:listitem="@layout/item_recommend_for_you" />-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_recommend">

                    <com.quiztest.quiztest.custom.ItemViewEarningTask
                        android:id="@+id/item_test_iq"
                        android:layout_width="@dimen/_158sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_6sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        custom:backgroundColor="@color/color_FBE8E7"
                        custom:image="@drawable/img_test_iq"
                        custom:title="Test IQ" />

                    <com.quiztest.quiztest.custom.ItemViewEarningTask
                        android:id="@+id/item_test_mbi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        custom:backgroundColor="@color/color_ECE8FD"
                        custom:image="@drawable/img_test_mbi"
                        custom:title="Test MBI" />

                    <com.quiztest.quiztest.custom.ItemViewEarningTask
                        android:id="@+id/item_test_eq"
                        android:layout_width="@dimen/_158sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_6sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_test_mbi"
                        custom:backgroundColor="@color/color_DEF5E8"
                        custom:image="@drawable/img_test_eq"
                        custom:title="Test EQ" />

                    <com.quiztest.quiztest.custom.ItemViewEarningTask
                        android:id="@+id/item_test_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_test_mbi"
                        custom:backgroundColor="@color/color_FEF8EA"
                        custom:image="@drawable/img_test_other"
                        custom:title="Test ..." />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_get_more_stars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_100sdp">

                <com.quiztest.quiztest.custom.ExtTextView
                    android:id="@+id/ext_get_more_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_more_stars"
                    android:textColor="@color/color_22313F"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_get_more_star"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ext_get_more_stars"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="-35dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="4"
                    tools:listitem="@layout/item_all_quiz_new" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>