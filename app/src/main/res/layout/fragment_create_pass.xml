<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.forgotPass.CreatePassFragment">

    <ImageView
        android:id="@+id/imv_thum"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:src="@drawable/ic_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.quiztest.quiztest.custom.ExtTextView
        android:id="@+id/txt_create_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="@string/create_password"
        android:textColor="@color/color_22313F"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imv_thum" />

    <com.quiztest.quiztest.custom.ExtEditText
        android:id="@+id/edt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/boarder"
        android:ellipsize="end"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingVertical="@dimen/_11sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_60sdp"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_create_pass" />


    <com.quiztest.quiztest.custom.ExtTextView
        android:id="@+id/txt_error_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:textColor="@color/color_DC2323"
        android:textSize="@dimen/_14sdp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_pass" />

    <ImageView
        android:id="@+id/imv_eye_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_10sdp"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/ic_close_eye"
        app:layout_constraintBottom_toBottomOf="@id/edt_pass"
        app:layout_constraintRight_toRightOf="@id/edt_pass"
        app:layout_constraintTop_toTopOf="@id/edt_pass" />

    <com.quiztest.quiztest.custom.ExtEditText
        android:id="@+id/edt_confirm_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/boarder"
        android:ellipsize="end"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingVertical="@dimen/_11sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_60sdp"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_error_pass" />

    <com.quiztest.quiztest.custom.ExtTextView
        android:id="@+id/txt_error_confirmpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:textColor="@color/color_DC2323"
        android:textSize="@dimen/_14sdp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_confirm_pass" />

    <ImageView
        android:id="@+id/imv_eye_repass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_10sdp"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/ic_close_eye"
        app:layout_constraintBottom_toBottomOf="@id/edt_confirm_pass"
        app:layout_constraintRight_toRightOf="@id/edt_confirm_pass"
        app:layout_constraintTop_toTopOf="@id/edt_confirm_pass" />

    <com.quiztest.quiztest.custom.ExtTextView
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_button_enable"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_confirm_pass" />

    <com.quiztest.quiztest.custom.ExtTextView
        android:id="@+id/txt_do_you_already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/do_you_already_have_an_account"
        android:textColor="@color/color_8D959D"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toStartOf="@id/txt_login"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_save" />

    <com.quiztest.quiztest.custom.ExtTextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2sdp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/login"
        android:textColor="@color/color_22313F"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="@id/txt_do_you_already"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_do_you_already"
        app:layout_constraintTop_toTopOf="@id/txt_do_you_already" />


</androidx.constraintlayout.widget.ConstraintLayout>